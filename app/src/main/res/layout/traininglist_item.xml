<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/training_title">

        <TextView
            android:id="@+id/training_word"
            style="@style/training_title"
            android:background="@drawable/button_background4"
            android:text="@string/training_text"
            android:textColor="@color/colorShadow"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/training_description"
            style="@style/description_title"
            android:text="@string/training_text"
            android:textAlignment="center"/>
    </LinearLayout>

</LinearLayout>